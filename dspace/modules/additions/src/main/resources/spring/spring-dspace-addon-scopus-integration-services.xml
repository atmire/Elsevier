<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd"
       default-autowire-candidates="*Service,*DAO,javax.sql.DataSource,*Mapping">

    <context:annotation-config/>
    <!-- allows us to use spring annotations in beans -->
    <context:component-scan base-package="com.atmire.import_citations"/>

    <bean id="ScopusImportService" class="com.atmire.import_citations.ScopusSource" scope="singleton">
        <property name="metadataFieldMapping" ref="ScopusMetadataFieldMapping"/>
        <property name="apiKey" ref="apiKey"/>
        <property name="name" value="Scopus"/>
        <property name="importFields" ref="scopusImportFields"/>
        <property name="idField" value="elsevier.identifier.eid"/>
    </bean>

    <bean id="ScopusMetadataFieldMapping" class="com.atmire.import_citations.ScopusMetadataFieldMapping"/>



</beans>